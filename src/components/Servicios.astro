---
import { contenidoServicios } from '../data/contenidoServicios.js';

const { titulo, contenido , imagen} = contenidoServicios;
---

<section class="Servicios">
  <section class="Izquierda">
    <div class="titulo-servicios" data-aos="fade-up" data-aos-offset="200" data-aos-easing="ease-in-sine" data-aos-duration="600">
      <h1 class="titulo-principal">{titulo.principal}</h1>
      <h2 class="titulo-secundario">{titulo.secundario}</h2>
    </div>
    <div class="servicios-grid" data-aos="fade-right" data-aos-offset="300" data-aos-easing="ease-in-sine">
      {Object.entries(contenidoServicios.contenido).map(([key, servicio]) => (
        <div class="servicio-card">
          <img 
            src={servicio.icono} 
            alt={servicio.alt}
            class="servicio-icono"
          />
          <h3 class="servicio-titulo">{servicio.titulo}</h3>
          <p class="servicio-descripcion">{servicio.descripcion}</p>
        </div>
      ))}
    </div>
  </section>
  <section class="Derecha">
    <div class="primera-imagen-servicios" data-aos="fade-left">
      <img 
        src={imagen.primero.src} 
        alt={imagen.primero.alt}
        class="first-image"
      />
    </div>
    <!-- <div class="contenedor-decorativo"></div> -->
    <div class="segunda-imagen-servicios" data-aos="fade-right">
      <img 
        src={imagen.segundo.src} 
        alt={imagen.segundo.alt}
        class="second-image"
      />
    </div>
  </section>
</section>


<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap');

  :root {
    --color-primario: #0A0A0A;
    --color-secundario: #FFFFFF;
    --color-acento: #FF5733;
    --color-fondo: #F4F4F4;
    --color-texto: #333333;
    --font-principal: 'Roboto Condensed', sans-serif;
  }

  .Servicios{
    display:flex;
    justify-content: center;
    gap: 10rem;
    background-color: #0F4E67;
    padding: 40px 0;
  }

  /* .Servicios::before{
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.3;
    z-index: 1;
  } */

  .Izquierda{
    display: flex;
    flex-direction: column;
    padding: 1rem;
    max-width: 600px;
  }
  
  .titulo-servicios{
    margin-bottom: 2rem;
  }

  .titulo-principal{
    font-family: var(--font-principal);
    font-size: 2.5rem;
    color: var(--color-secundario);
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .titulo-secundario{
    font-family: var(--font-principal);
    font-size: 1.25rem;
    color: var(--color-secundario);
    text-align: center;
  }

  .servicios-grid{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .servicio-card{
    display: grid;
    grid-template-columns: auto 1fr;
    grid-template-rows: auto auto;
    gap: 10px 15px;
  }

  .servicio-icono{
    grid-row: 1 / 3;
    width: 40px;
    height: auto;
  }

  .servicio-titulo{
    grid-column: 2;
    grid-row: 1;
    margin: 0;
    font-family: var(--font-principal);
    font-size: 1.25rem;
    color: var(--color-secundario);
  }

  .servicio-descripcion{
    grid-column: 2;
    grid-row: 2;
    margin: 0;
    font-family: var(--font-principal);
    font-size: 1rem;
    color: var(--color-secundario);
  }

  .Derecha{
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    padding: 1rem;
  }

  .primera-imagen-servicios{
    display: flex;
    justify-content: start;
  }

  .segunda-imagen-servicios{
    display: flex;
    justify-content: end;
  }

  .first-image{
    position: relative;
    transform: translate(-100px, 80px);
    width: 530px;
    height: auto;
    z-index: 2;
  }

  .second-image{
    position: relative;
    transform: translate(10px, -30px);
    width: 430px;
    height: auto;
    z-index: 1;
  }

  /* Responsivo para tablets */
  @media screen and (max-width: 1024px) {
    .Servicios {
      gap: 5rem;
    }
    
    .titulo-principal {
      font-size: 2rem;
    }

    .titulo-secundario {
      font-size: 1.1rem;
    }
  }

  /* Responsivo para móviles */
  @media screen and (max-width: 768px) {
    .Servicios {
      flex-direction: column;
      gap: 0;
      padding: 2rem 1rem;
    }

    .Izquierda {
      max-width: 100%;
      padding: 0;
    }

    .titulo-principal {
      font-size: 1.8rem;
      margin-bottom: 1rem;
    }

    .titulo-secundario {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    /* Grid de 2 columnas x 3 filas en móviles */
    .servicios-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: repeat(3, auto);
      gap: 1rem;
      max-width: 100%;
    }

    .servicio-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 1rem;
      gap: 0.5rem;
    }

    .servicio-icono {
      width: 50px;
      height: 50px;
      margin-bottom: 0.5rem;
    }

    .servicio-titulo {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .servicio-descripcion {
      font-size: 0.85rem;
      line-height: 1.3;
    }

    /* Ocultar imágenes en móviles */
    .Derecha {
      display: none;
    }
  }

  /* Responsivo para móviles pequeños */
  @media screen and (max-width: 480px) {
    .Servicios {
      padding: 1.5rem 0.8rem;
    }

    .titulo-principal {
      font-size: 1.6rem;
    }

    .titulo-secundario {
      font-size: 0.9rem;
    }

    .servicios-grid {
      gap: 0.8rem;
    }

    .servicio-card {
      padding: 0.8rem;
    }

    .servicio-icono {
      width: 40px;
      height: 40px;
    }

    .servicio-titulo {
      font-size: 0.9rem;
    }

    .servicio-descripcion {
      font-size: 0.8rem;
    }
  }
</style>