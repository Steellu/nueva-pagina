---
import { contenidoFooter } from '../data/contenidoFooter.js';
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <!-- Sección izquierda: Botón de descarga -->
            <div class="footer-left">
                <a href={contenidoFooter.brochure.url} class="download-btn" download>
                    <div class="download-icon">
                        <!-- <i class="fas fa-download"></i> -->
                        <img class="icono-brochure" src={contenidoFooter.brochure.icon} >
                    </div>
                    <span>{contenidoFooter.brochure.texto}</span>
                </a>
            </div>

            <!-- Sección central: Logo y título -->
            <div class="footer-center">
                <div class="logo-container">
                    <img src={contenidoFooter.logo.imagen} alt={contenidoFooter.logo.alt}class="footer-logo" />
                </div>
            </div>

            <!-- Sección derecha: Redes sociales -->
            <!-- <div class="footer-right">
                <div class="social-links">
                    {contenidoFooter.redesSociales.map((red) => (
                        <a href={red.url} class="social-link" target="_blank" rel="noopener noreferrer" aria-label={red.nombre}>
                            <i class={red.icono}></i>
                        </a>
                    ))}
                </div>
            </div> -->
        </div>

        <!-- Copyright -->
        <div class="footer-bottom">
            <p class="copyright">{contenidoFooter.copyright}</p>
        </div>
    </div>
</footer>

<style>
    .footer {
        /* background: linear-gradient(135deg, #1e3a5f 0%, #2c5282 100%); */
        background: linear-gradient(to bottom, #0d3544 50%, #125b77 100%);
        color: white;
        padding: 40px 20px 20px;
        position: relative;
        overflow: hidden;
    }

    .footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
        opacity: 0.3;
        z-index: 1;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .footer-content {
        display: grid;
        grid-template-columns: 1fr 2fr 1fr;
        align-items: center;
        gap: 40px;
        margin-bottom: 30px;
    }

    /* Sección izquierda - Botón de descarga */
    .footer-left {
        display: flex;
        justify-content: flex-start;
    }

    .download-btn {
        display: flex;
        align-items: center;
        gap: 60px;
        background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3);
        border: 2px solid transparent;
    }

    .download-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 107, 53, 0.4);
        background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    }

    .download-icon {
        /* width: 24px;
        height: 24px; */
        display: flex;
        align-items: center;
        justify-content: center;
        /* background: rgba(255, 255, 255, 0.2); */
        border-radius: 6px;
    }

    .download-icon i {
        font-size: 14px;
    }

    .icono_brochure{
        width: 20px;
        height: 20px;
    }

    /* Sección central - Logo y título */
    .footer-center {
        display: flex;
        justify-content: center;
    }

    .logo-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .footer-logo {
        width: 25%;
        height: auto;
        margin-bottom: 15px;
        filter: brightness(1.1);
        transition: transform 0.3s ease;
    }

    .footer-logo:hover {
        transform: scale(1.05);
    }

    .company-info {
        text-align: center;
    }

    .company-name {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0 0 5px 0;
        color: #4fc3f7;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .company-tagline {
        font-size: 0.9rem;
        color: #b0bec5;
        margin: 0;
        font-weight: 400;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Sección derecha - Redes sociales */
    .footer-right {
        display: flex;
        justify-content: flex-end;
    }

    .icono-brochure{
        width: 50px;
        height: auto;
    }

    .social-links {
        display: flex;
        gap: 15px;
    }

    .social-link {
        width: 45px;
        height: 45px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #b0bec5;
        text-decoration: none;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .social-link:hover {
        background: rgba(255, 255, 255, 0.2);
        color: #4fc3f7;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(79, 195, 247, 0.3);
    }

    .social-link i {
        font-size: 18px;
    }

    /* Copyright */
    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 20px;
        text-align: center;
    }

    .copyright {
        font-size: 0.9rem;
        color: #b0bec5;
        margin: 0;
        opacity: 0.8;
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .footer-content {
            gap: 30px;
        }

        .company-name {
            font-size: 1.6rem;
        }

        .footer-logo {
            width: 100px;
            height: auto;
        }

        .icono-brochure{
            width: 40px;
            height: auto;
        }
    }

    @media (max-width: 768px) {
        .footer {
            padding: 30px 15px 20px;
        }

        .footer-content {
            grid-template-columns: 1fr;
            gap: 25px;
            text-align: center;
        }

        .footer-left,
        .footer-right {
            justify-content: center;
        }

        .download-btn {
            padding: 12px 20px;
            font-size: 0.9rem;
        }

        .company-name {
            font-size: 1.4rem;
        }

        .footer-logo {
            width: 100px;
            height: auto;
        }

        .social-links {
            justify-content: center;
        }

        .icono-brochure{
            width: 30px;
            height: auto;
        }
    }

    @media (max-width: 480px) {
        .footer {
            padding: 25px 10px 15px;
        }

        .footer-content {
            gap: 20px;
        }

        .download-btn {
            padding: 10px 18px;
            font-size: 0.8rem;
            gap: 10px;
        }

        .download-icon {
            width: 20px;
            height: 20px;
        }

        .download-icon i {
            font-size: 12px;
        }

        .company-name {
            font-size: 1.2rem;
            letter-spacing: 1px;
        }

        .company-tagline {
            font-size: 0.8rem;
        }

        .footer-logo {
            width: 100px;
            height: auto;
        }

        .social-link {
            width: 40px;
            height: 40px;
        }

        .social-link i {
            font-size: 16px;
        }

        .social-links {
            gap: 12px;
        }
        
        .icono-brochure{
            width: 30px;
            height: auto;
        }
    }
</style>