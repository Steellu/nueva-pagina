---
import { contenidoClientes } from '../data/contenidoClientes.js';

const { titulo, descripcion , clientes} = contenidoClientes;
---

<section class="Clientes">
    <section class="Izquierda">
        <div class="contenedor-titulos-clientes" data-aos="fade-right" data-aos-offset="300" data-aos-easing="ease-in-sine">
            <h3 class="titulo-mini">{titulo.mini}</h3>
            <h1 class="titulo-principal">{titulo.principal}</h1>
            <hr>
            <p class="descripcion">{descripcion.texto}</p>
        </div>
    </section>
    <section class="Derecha">
        <div class="clientes-grid" data-aos="fade-left" data-aos-offset="300" data-aos-easing="ease-in-sine">
            {Object.entries(contenidoClientes.clientes).map(([key, cliente]) => (
                <div class="clientes-card">
                <img 
                    src={cliente.logo} 
                    alt={cliente.alt}
                    class="clientes-icono"
                />
                </div>
            ))}
        </div>
    </section>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap');

  :root {
    --color-primario: #1A4EB0;
    --color-secundario: #FFFFFF;
    --color-acento: #FF5733;
    --color-descripcion: #7E7C7C;
    --color-texto: #222222;
    --font-principal: 'Roboto Condensed', sans-serif;
  }

  .Clientes{
    display: flex;
    justify-content: center;
    /* gap: 5rem; */
    background: linear-gradient(to bottom, #1E9BCD 0%, #FFFFFF 49%);
    padding: 10rem 2rem;
    
  }

  .Izquierda{
    display: flex;
    flex-direction: column;
    align-content: center;
    padding-top: 5rem;
    max-width: 600px;
    flex: 1;
  }

  .contenedor-titulos-clientes{
    margin-right: 5rem;
  }

  .titulo-mini{
    color: var(--color-primario);
    font-family: var(--font-principal);
    font-size: 2rem;
    font-weight: lighter;
    margin: 0;
  }

  .titulo-principal{
    font-family: var(--font-principal);
    font-size: 3.2rem;
    color: var(--color-texto);
    font-weight: bold;
    margin: 0;
  }

  hr{
    border: 1px solid var(--color-primario);
    width: 180px;
    margin: 1rem 0;
    align: left;
  }

  .descripcion{
    font-family: var(--font-principal);
    font-size: 0.8rem;
    color: var(--color-descripcion);
  }

  .Derecha{
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 5rem;
    max-width: 800px;
    flex: 1;
  }

  .clientes-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 0px;
    width: 100%;
    max-width: 600px;
    height: 400px;
    border: 1px solid #ddd;
  }

  .clientes-card {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f8f9fa;
    padding: 20px;
    border: 1px solid #ddd;
  }

  .clientes-icono {
    max-width: 350px;
    max-height: 80px;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  /* Media Queries para Responsividad */
  
  /* Tablets */
  @media (max-width: 1024px) {
    .Clientes {
      gap: 5rem;
      padding: 8rem 2rem;
    }
    
    .titulo-principal {
      font-size: 2.8rem;
    }
    
    .contenedor-titulos-clientes {
      margin-right: 2rem;
    }
  }

  /* M칩viles y pantallas peque침as */
  @media (max-width: 768px) {
    .Clientes {
      flex-direction: column;
      gap: 3rem;
      padding: 5rem 1rem;
    }
    
    .Izquierda {
      padding-top: 0;
      max-width: 100%;
      text-align: center;
    }
    
    .contenedor-titulos-clientes {
      margin-right: 0;
    }
    
    .titulo-mini {
      font-size: 1.5rem;
    }
    
    .titulo-principal {
      font-size: 2.2rem;
    }
    
    .descripcion {
      font-size: 0.9rem;
    }
    
    hr {
      margin: 1rem auto;
    }
    
    .Derecha {
      padding-top: 0;
      max-width: 100%;
    }
    
    .clientes-grid {
      grid-template-columns: 1fr; /* Una sola columna */
      grid-template-rows: repeat(4, 1fr); /* 4 filas */
      height: auto;
      max-width: 400px;
    }
    
    .clientes-card {
      padding: 15px;
      min-height: 100px;
    }
    
    .clientes-icono {
      max-width: 250px;
      max-height: 60px;

    }
  }

  /* M칩viles muy peque침os */
  @media (max-width: 480px) {
    .Clientes {
      padding: 3rem 1rem;
    }
    
    .titulo-mini {
      font-size: 1.2rem;
    }
    
    .titulo-principal {
      font-size: 1.8rem;
    }
    
    .descripcion {
      font-size: 0.8rem;
    }
    
    .clientes-grid {
      max-width: 300px;
    }
    
    .clientes-icono {
      max-width: 200px;
      max-height: 50px;
    }
  }
</style>